{
  "manifest_version": 3,
  "name": "LinkedInSight",
  "version": "1.0",
  "description": "Extract information from your linkedIn network",
  "permissions": [
    "activeTab",
    "webRequest",
    "storage",
    "downloads"

  ],
  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "insight_icon_16.png",
    "32": "insight_icon_32.png",
    "48": "insight_icon_48.png",
    "128": "insight_icon_128.png"
  },

  

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}